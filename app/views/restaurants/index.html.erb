<h1>Reservester</h1>

<%= link_to 'New Restaurant', new_restaurant_path %>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Address</th>
    <th>Phone</th>
  </tr>

  <% @restaurants.each do |r| %>
  <tr>
    <td><%= r.name %></td>
    <td><%= r.description %></td>
    <td><%= r.address %></td>
    <td><%= r.phone %></td>
  </tr>
  <% end %>
</table>
